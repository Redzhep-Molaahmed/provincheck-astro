---
import { Image } from "astro:assets";
const { post } = Astro.props;
---

<div
  class="flex flex-col overflow-hidden transition duration-500 ease-in-out transform bg-white rounded-lg shadow-2xl hover:scale-105 max-w-md mx-auto"
>
  <img
    class="h-56 rounded-t-lg w-full object-cover"
    alt="article image"
    src="https://images.unsplash.com/photo-1472437774355-71ab6752b434?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=967&q=80"
  />
  <div class="px-6 pt-4 mb-2 text-xl font-bold">
    <span>{post.data.title}</span>
  </div>
  <div class="px-6 pt-2">
    <small>{post.data.author} | {new Date(post.data.pubDate).toLocaleDateString()}</small>
    <div class="overflow-hidden h-16 ..."> {post}</div>
  </div>
  <div class="px-6 pb-4">
    <a
      href="#"
      class="inline-block px-3 py-1 my-1 mr-2 text-sm font-semibold text-white bg-teal-400 rounded-full"
      >#HTML</a
    >
    <a
      href="#"
      class="inline-block px-3 py-1 my-1 mr-2 text-sm font-semibold text-white bg-teal-400 rounded-full"
      >#CSS</a
    >
    <a
      href="#"
      class="inline-block px-3 py-1 my-1 mr-2 text-sm font-semibold text-white bg-teal-400 rounded-full"
      >#Web</a
    >
  </div>
</div>
